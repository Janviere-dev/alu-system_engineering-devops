#!/usr/bin/env bash
# Configures a new Ubuntu machine with Nginx and adds custom HTTP response header

# Update package list
apt-get update -y

# Install Nginx if not already installed
apt-get install nginx -y

# Start and enable Nginx service
systemctl start nginx
systemctl enable nginx

# Get the current hostname
# shellcheck disable=SC2154
hostname=$(hostname)

# Create the custom Nginx configuration
cat > /etc/nginx/sites-available/default << EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /var/www/html;
    index index.html index.htm index.nginx-debian.html;

    server_name _;

    # Add custom header with hostname
    add_header X-Served-By \$hostname;

    location / {
        try_files \$uri \$uri/ =404;
    }
}
EOF

# Test Nginx configuration
nginx -t

# Restart Nginx to apply changes
systemctl restart nginx

# Allow Nginx through firewall (if ufw is active)
ufw allow 'Nginx Full' 2>/dev/null || true

# Create a simple index.html if it doesn't exist
if [ ! -f /var/www/html/index.html ]; then
    echo "Hello World!" > /var/www/html/index.html
fi

echo "Nginx configured successfully with custom header X-Served-By: $hostname"
