#!/usr/bin/env bash
# Installs Nginx and configures a custom 404 page that returns "Ceci n'est pas une page"

set -e

# Install Nginx
apt-get update -y
apt-get install nginx -y

# Create custom 404 page
echo "Ceci n'est pas une page" > /var/www/html/custom_404.html

# Inject error_page directive into Nginx config
sed -i '/^\s*server {/a \    error_page 404 /custom_404.html;\n    location = /custom_404.html {\n        internal;\n    }' /etc/nginx/sites-available/default

# Test Nginx config and restart
nginx -t
service nginx restart

