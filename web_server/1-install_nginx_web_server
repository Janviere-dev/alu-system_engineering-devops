#!/usr/bin/env bash
# Installs and configures Nginx to serve a custom page with "Holberton School" at root

set -e

# Update package list and install nginx
apt-get update -y
apt-get install nginx -y

# Replace default index.html with required content
echo "Holberton School for the win!" > /var/www/html/index.html

# Start nginx using service (not systemctl)
service nginx start

